{
  "name": "mock-ai",
  "version": "1.0.0",
  "description": "a backend service with modular, scalable code, demonstrating basic familiarity with AI integration concepts.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "serve": "npm run build && node dist/server.js --env production",
    "serve-dev": "npm run build && node dist/server.js",
    "start": "npm run serve",
    "start-prod": "node dist/server.js",
    "start-dev": "npm run serve-dev",
    "dev": "nodemon src/server.ts",
    "update-dep-dev": "npm run check-updates && npm run dev-install",
    "update-dep-prod": "npm run check-updates && npm run prod-install",
    "check-updates": "npx npm-check-updates -u",
    "dev-install": "npm install",
    "prod-install": "npm install --only=production",
    "remove-updates": "rm -Rf node_modules",
    "debug": "npm run build && ndb node dist/server.js"
  },
  "keywords": [
    "MOCK AI",
    "API"
  ],
  "author": "Oyefule Oluwatayo",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.1",
    "eslint": "^9.9.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2"
  }
}
