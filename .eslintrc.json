{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["warn", "always"],
        "quotes": ["warn", "single"],
        "no-duplicate-imports": "error",
        "no-unused-vars": "warn",
        "prefer-const": "error",
        "prefer-template": "warn",
        "no-undef-init": "error",
        "@typescript-eslint/no-explicit-any": "off"
    }
}
